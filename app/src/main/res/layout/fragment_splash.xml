<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_logo_background"
    tools:context=".ui.main.SplashFragment">


    <Button
        android:id="@+id/splashGivePermissionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open app permissions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splashSafeCryptLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main_logo_foreground"
        app:layout_constraintBottom_toTopOf="@+id/splashSafeCryptTextLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/splashSafeCryptTextLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SafeCrypt"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/splashGivePermissionsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/splashSafeCryptPermissionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="This app requires read and write permissions to work."
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashGivePermissionsButton" />


</androidx.constraintlayout.widget.ConstraintLayout>