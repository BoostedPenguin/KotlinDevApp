<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SafeCrypt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark_300</item>
        <item name="colorPrimaryVariant">@color/primary_dark_400</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_light_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/teal_700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <item name="android:itemTextAppearance">@style/Theme.SafeCrypt.SettingsWhiteText</item>

    </style>

    <style name="Theme.SafeCrypt.SettingsWhiteText" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Default" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/on_primary_dark</item>
    </style>

    <style name="Toolbar.Default" parent="Widget.MaterialComponents.Toolbar.Primary" >
        <item name="titleTextColor">@color/on_primary_dark</item>
        <item name="subtitleTextColor">@color/on_primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
    </style>

    <style name="PatternView.Default" parent="Theme.AppCompat">
        <item name="normalStateColor">@color/on_primary_dark</item>
        <item name="correctStateColor">@color/success</item>
        <item name="wrongStateColor">@color/error</item>
    </style>
    <style name="TabLayout.Default" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/primary_dark_300</item>
        <item name="tabIndicatorColor">@color/on_primary_dark</item>

        <item name="tabIconTint">@color/tab_item_color_selector_night</item>
        <item name="tabSelectedTextColor">@color/on_primary_dark</item>
        <item name="tabTextColor">@color/primary_light_600</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/on_primary_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_light_600</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.SafeCrypt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SafeCrypt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SafeCrypt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>